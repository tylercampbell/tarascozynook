---
interface Props {
  id: string;
  colorClass: string;
}

const { id, colorClass } = Astro.props;
---

<svg width="100%" height="16">
  <defs>
    <pattern id={id} width="32" height="16" patternUnits="userSpaceOnUse">
      <polygon points="0,0 16,16 32,0" class={colorClass} />
    </pattern>
  </defs>
  <rect width="100%" height="16" fill={`url(#${id})`} />
</svg>
