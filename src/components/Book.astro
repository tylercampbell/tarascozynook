---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  bookName: string;
  storePage: string;
  lazy?: boolean;
}

const { imagePath, bookName, storePage, lazy = true } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}",
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`,
  );
---

<a href={storePage} class="group">
  <Image 
    src={images[imagePath]()}
    width=640
    alt={bookName}
    class="object-contain ring-2 ring-white rounded shadow-xl shadow-black/30 transition group-hover:shadow-black/50 group-hover:-rotate-2 group-hover:-translate-y-2"
    loading={lazy ? "lazy" : "eager"}
  />
</a>
