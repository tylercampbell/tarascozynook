---
interface Props {
  id: string;
  twClasses?: string;
  colorClass: string;
}

const { id, twClasses, colorClass }: Props = Astro.props;
---
<svg width="100%" height="16" class={twClasses}>
  <defs>
    <pattern id={id} x="16" width="32" height="16" patternUnits="userSpaceOnUse">
      <path d="M32 32H0V0Q16 20 32 0V32Z" class={colorClass} />
    </pattern>
  </defs>
  <rect width="100%" height="16" fill={`url(#${id})`} />
</svg>


