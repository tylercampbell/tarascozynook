---
interface Props {
  id: string;
  twClasses?: string;
  colorClass: string;
}

const { id, twClasses, colorClass }: Props = Astro.props;
---
<svg width="100%" height="16" class={twClasses}>
  <defs>
    <pattern id={id} width="32" height="16" patternUnits="userSpaceOnUse">
      <path d="M0 0 Q16 16 32 0" class={colorClass} />
    </pattern>
  </defs>
  <rect width="100%" height="16" fill={`url(#${id})`} />
</svg>


